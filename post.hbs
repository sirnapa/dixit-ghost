{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

    <article class="{{post_class}}">

        {{! Everything inside the #post tags pulls data from the post }}
        {{#post}}

        <section class="echo-post-content">            
            {{> post-meta}}
            <h1 class="echo-post-title">{{{title}}}</h1>
            <p>{{content}}</p>
        </section>

        <div class="echo-post-footer">

            <section class="echo-share">
                <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                    onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                    <i class="icon-facebook"></i>
                </a>
                <a href="http://twitter.com/share?text={{encode title}}&url={{url absolute="true"}}"
                    onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                    <i class="icon-twitter"></i>
                </a>
                <a href="https://plus.google.com/share?url={{url absolute="true"}}"
                    onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                    <i class="icon-google-plus"></i>
                </a>
            </section>

            {{#if author}}
                <section class="author">
                    <div class="image"><img src="{{author.image}}" title="{{author.name}}"/></div>
                    <div class="about">
                        <h4>{{author.name}}.  <small>{{author.location}}</small></h4>
                        <p>{{author.bio}}</p>
                    </div>
                </section>
            {{/if}}

            <section class="comment">
                <div class="g-comments" data-href="{{@blog.url}}{{url}}" 
                    data-first_party_property="BLOGGER" data-width="1000"
                    data-view_type="FILTERED_POSTMOD">Cargando comentarios ...</div>
                <script async type="text/javascript" src="//apis.google.com/js/plusone.js?callback=gpcb"></script>
                <noscript>Por favor activa Javascript para ver los comentarios.</noscript>
            </section>

        </div>

        {{/post}}

    </article>