<div id="post-index">
    {{#foreach posts}}

    <article class="{{post_class}}">
        <section class="dixit-post-excerpt">       
            {{> post-meta}}
            <div class="post-flex">
                <a href="{{url}}" class="medium-3 columns">{{content words="0"}}</a>
                <div class="medium-9 columns">
                    <h1><a href="{{url}}">{{{title}}}</a></h1>
                    <p class="dixit-excerpt">{{excerpt}}&hellip;</p>
                    <a class="dixit-read-post" href="{{url}}">Leer m√°s &rarr;</a>
                </div>
            </div>
        </section>
    </article>

    {{/foreach}}

    {{!! Pagination links }}
    {{pagination}}
</div>